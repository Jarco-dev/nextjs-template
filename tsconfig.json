{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": ".next",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2021"
    ],
    "module": "commonjs",
    "target": "ES2021",
    "incremental": true,
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "pages/**/*.{tsx,ts}",
    "components/**/*.{ts,tsx}",
    "next-env.d.ts"
  ],
  "paths": {
    "@/api/*": [
      "pages/api/*"
    ],
    "@/components/*": [
      "components/*"
    ],
    "@/utils/*": [
      "utils/*"
    ],
    "@/classes/*": [
      "modules/*"
    ],
    "@/public/*": [
      "public/*"
    ],
    "@/types/*": [
      "types/index.d.ts"
    ]
  }
}
